<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@+id/scrollParent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="250dip"
                    android:background="#ddd"
                    android:padding="10dip">

                    <FrameLayout
                        android:id="@+id/layoutBanner"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/corner_radius_dark_green"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/corner_radius_white_1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="3"
                                android:background="@drawable/corner_radius_dark_green"
                                android:gravity="bottom">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="20dip"
                                    android:background="#075c52"></LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2"></LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bannerDayOff"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="3">

                                <TextView
                                    android:id="@+id/tvBannerWeekend"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:gravity="center"
                                    android:text="@string/bannerWeekend_EN"
                                    android:textColor="#fff"
                                    android:textSize="40sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/tvBannerDayOff"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:text="@string/bannerDayOff_EN"
                                    android:textColor="#075c52"
                                    android:textSize="15sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bannerMorning"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="3"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1"
                                        android:gravity="left">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dip"
                                            android:layout_marginTop="10dip"
                                            android:src="@drawable/banner_sunny" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1"
                                            android:padding="10dip"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="10dip"
                                                android:src="@drawable/banner_food_variant" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1"
                                            android:padding="10dip"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/banner_motorbike" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1"
                                            android:padding="10dip"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/banner_briefcase" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="2">

                                    <ImageView
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:padding="20dip"
                                        android:src="@drawable/banner_clipboard_text" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1" />

                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="2"
                                            android:gravity="center">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="10dip"
                                                android:layout_marginLeft="20dip"
                                                android:src="@drawable/banner_pencil" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/tvBannerMorning"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:text="@string/bannerMorning_EN"
                                    android:textColor="#075c52"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bannerMorningWork"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_weight="3">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_ideas"
                                        android:padding="20dip"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_compass"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">
                                <TextView
                                    android:id="@+id/tvBannerMorningWork"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:text="@string/bannerMorningWork_EN"
                                    android:textSize="17sp"
                                    android:textColor="#075c52"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bannerMidday"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="3"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:padding="5dip">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_silverware_variant" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="bottom"
                                    android:padding="5dip">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_coffee" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:padding="5dip">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_gamepad_variant" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="bottom"
                                    android:padding="5dip">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_short_snap" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/tvBannerMidday"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:text="@string/bannerMidday_EN"
                                    android:textColor="#075c52"
                                    android:textSize="15sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bannerAfternoon"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:orientation="horizontal"
                                android:layout_weight="3">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:gravity="center"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_projector_screen"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:gravity="center"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_timetable"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:gravity="center"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/banner_run"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:paddingTop="10dip"
                                android:paddingLeft="10dip"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/tvBannerAfternoon"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textColor="#075c52"
                                    android:textSize="17sp"
                                    android:text="@string/bannerAfternoon_EN"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bannerEvening"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_weight="3">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_weight="3">
                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:orientation="horizontal"
                                        android:layout_weight="1">
                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:padding="10dip"
                                            android:gravity="center"
                                            android:layout_weight="1">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/banner_shower"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:padding="10dip"
                                            android:gravity="center"
                                            android:layout_weight="1">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/banner_silverware_variant"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:orientation="horizontal"
                                        android:layout_weight="1">
                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:padding="10dip"
                                            android:gravity="center"
                                            android:layout_weight="1">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/banner_family"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dip"
                                            android:layout_height="fill_parent"
                                            android:padding="10dip"
                                            android:gravity="center"
                                            android:layout_weight="1">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/banner_television"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:layout_weight="2">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="20dip"
                                        android:src="@drawable/banner_check"/>
                                </FrameLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">
                                <TextView
                                    android:id="@+id/tvBannerEvening"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textColor="#075c52"
                                    android:textSize="17sp"
                                    android:padding="10dip"
                                    android:text="@string/bannerEvening_EN"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bannerNight"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="3"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="2"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dip">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:orientation="horizontal"
                                        android:paddingTop="25dip">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="fill_parent"
                                            android:layout_marginRight="5dip"
                                            android:padding="10dip"
                                            android:src="@drawable/banner_clock" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="fill_parent"
                                            android:padding="5dip"
                                            android:src="@drawable/banner_calendar" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="1"
                                        android:gravity="left|bottom">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dip"
                                            android:src="@drawable/banner_sleep" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="2"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_marginRight="20dip"
                                        android:layout_weight="1"
                                        android:gravity="right">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dip"
                                            android:src="@drawable/banner_moon" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dip"
                                        android:layout_weight="2"
                                        android:gravity="bottom"
                                        android:paddingBottom="30dip">

                                        <ImageView
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/banner_city" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/tvBannerNight"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:padding="10dip"
                                    android:text="@string/bannerNight_EN"
                                    android:textColor="#075c52"
                                    android:textSize="17sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/ListNotes"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:layout_marginTop="10dip"
                            android:layout_marginBottom="10dip"/>

                        <LinearLayout
                            android:id="@+id/layoutSearchHolder"
                            android:layout_width="fill_parent"
                            android:layout_height="50dip"
                            android:orientation="vertical"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEmptyList"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Nothing here now"
                        android:textColor="#075c52"
                        android:textSize="20sp"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/buttonCreateNewNote"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/circle_dark_green_bg"
            android:src="@drawable/ic_add_white_36dp" />

        <LinearLayout
            android:id="@+id/SearchBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#50075c52"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="10dip"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:background="@drawable/edittext_round_corner_white">

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/transparent"
                    android:src="@drawable/ic_search_black_24dp" />

                <EditText
                    android:id="@+id/edtSearchNotes"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="6"
                    android:background="@drawable/transparent" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>