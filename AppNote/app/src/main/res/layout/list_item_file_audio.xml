<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip">

    <TextView
        android:id="@+id/GroupText"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="A"
        android:textColor="#075c52"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="0dip"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="89dip"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layoutDivider"
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="1dip"
                android:layout_marginRight="10dip"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/FileName"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:text="Audio name"
                    android:textColor="#075c52"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/FileInfor"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Audio information"
                        android:textColor="#075c52"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical">

                        <ImageButton
                            android:id="@+id/buttonPlayAudio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_headset_black_24dp"
                            android:background="@drawable/transparent"
                            android:layout_marginRight="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutButtonDelete"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/buttonDeleteThis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cancel_black_24dp"
                            android:background="@drawable/transparent"
                            android:layout_marginRight="10dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>