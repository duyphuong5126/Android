<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:paddingTop="5dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip">

        <TextView
            android:id="@+id/tvNoteTitle"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="6"
            android:textSize="18sp"
            android:text="Note title here"
            android:textColor="#999"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageScheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alarm_black_18dp"
                android:paddingBottom="5dip" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCreateDate"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:paddingLeft="15dip"
        android:textSize="13sp"
        android:textColor="#075c52"
        android:text="Create date here" />

    <TextView
        android:id="@+id/tvNoteShortContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dip"
        android:textSize="11sp"
        android:textColor="#999"
        android:text="Content here"
        android:gravity="center_vertical"
        android:paddingTop="5dip"
        android:paddingBottom="5dip" />

    <LinearLayout
        android:id="@+id/noteDivider"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#ddd"/>

</LinearLayout>